<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.estrenos.EstrenosFragment"
    android:orientation="vertical"
    android:background="@color/graybg">

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Próximos Estrenos"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:fontFamily="@font/litteratextbold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUbicacion"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button_gris"
        android:backgroundTint="#636363"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="@font/litteratextregular"
        android:text="Cd. Obregón, Sonora, Méx."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:layout_marginTop="5dp"
         />

    <ListView
        android:id="@+id/gridview"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="35dp"
        android:stretchMode="columnWidth"
        android:textColor="@color/white"
        />

</LinearLayout>