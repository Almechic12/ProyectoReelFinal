<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/graybg"
    tools:context=".ui.cartelera.CarteleraFragment">

    <TextView
        android:layout_marginTop="25dp"
        android:layout_marginStart="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cartelera"
        android:textSize="36sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUbicacion"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button_gris"
            android:backgroundTint="#636363"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Cd. Obregón, Sonora, Méx."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:layout_marginStart="30dp"
             />

        <ImageButton
            android:id="@+id/btn_buscar"
            android:layout_marginStart="15dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/graybg"
            android:src="@drawable/ic_baseline_search_48" />

        <ImageButton
            android:id="@+id/btn_filtro"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/graybg"
            android:src="@drawable/ic_baseline_tune_48" />

    </LinearLayout>

    <GridView
        android:id="@+id/gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="50dp"
        android:stretchMode="columnWidth"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"
        android:numColumns="3"/>

</LinearLayout>